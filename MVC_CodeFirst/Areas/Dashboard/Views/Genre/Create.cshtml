@model MVC_CodeFirst.Areas.Dashboard.Models.Entities.Genre
@{
    ViewData["Title"] = "Create";
    Layout = "~/Areas/Dashboard/Views/Shared/_DashboardLayout.cshtml";
}

<h1>Create Genre</h1>

<form method="post">
    <div class="card-body">
        <div class="form-group">
            <label for="exampleInputEmail1">Genre Name</label>
            <input type="text" class="form-control" id="exampleInputEmail1" placeholder="Enter New Genre">
        </div>
        <div class="form-group">
            <label for="exampleInputPassword1">Description</label>
            <input type="text" class="form-control" id="exampleInputPassword1" placeholder="Enter Genre Description">
        </div>
        <div class="form-group">
            <label for="exampleInputPassword1">Direktör</label>
            <input type="text" class="form-control" id="exampleInputPassword1" placeholder="Enter Genre Director">
        </div>
    </div>

    <div class="card-footer">
        <button type="submit" class="btn btn-primary">Save</button>
    </div>
</form>